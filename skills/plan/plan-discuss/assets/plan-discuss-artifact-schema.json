{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nunchuck Plan Discuss Artifact",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "status", "created_at", "updated_at", "intent", "structure"],
  "properties": {
    "version": { "type": "string", "const": "1" },
    "status": { "type": "string", "enum": ["drafting", "ready"] },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" },
    "intent": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "objective", "constraints", "assumptions", "open_questions", "success_criteria"],
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "objective": { "type": "string", "minLength": 1 },
        "constraints": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "assumptions": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "open_questions": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "success_criteria": { "type": "array", "items": { "type": "string", "minLength": 1 } }
      }
    },
    "structure": {
      "type": "object",
      "additionalProperties": false,
      "required": ["subplans"],
      "properties": {
        "subplans": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["letter", "title", "tasks"],
            "properties": {
              "letter": { "type": "string", "pattern": "^[a-z]$" },
              "title": { "type": "string", "minLength": 1 },
              "tasks": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["task", "title", "focus", "inputs", "work", "success_criteria", "validation_steps", "risk"],
                  "properties": {
                    "task": { "type": "string", "pattern": "^(i|ii|iii|iv|v|vi|vii|viii|ix|x)$" },
                    "title": { "type": "string", "minLength": 1 },
                    "focus": { "type": "string" },
                    "inputs": {
                      "type": "array",
                      "items": { "type": "string", "minLength": 1 }
                    },
                    "work": {
                      "type": "array",
                      "items": { "type": "string", "minLength": 1 }
                    },
                    "success_criteria": {
                      "type": "array",
                      "items": { "type": "string", "minLength": 1 }
                    },
                    "validation_steps": {
                      "type": "array",
                      "items": { "type": "string", "minLength": 1 }
                    },
                    "risk": { "type": "string", "enum": ["low", "medium", "high"] }
                  }
                }
              }
            }
          }
        }
      }
    },
    "surface": {
      "type": "object",
      "additionalProperties": false,
      "required": ["root", "globs", "excludes", "max_files"],
      "properties": {
        "root": { "type": "string", "minLength": 1 },
        "globs": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "excludes": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "max_files": { "type": "integer", "minimum": 1, "maximum": 2000 }
      }
    }
  },
  "allOf": [
    {
      "if": { "properties": { "status": { "const": "ready" } }, "required": ["status"] },
      "then": {
        "properties": {
          "intent": {
            "properties": {
              "open_questions": { "type": "array", "maxItems": 0 },
              "success_criteria": { "type": "array", "minItems": 1 }
            }
          },
          "structure": {
            "properties": {
              "subplans": {
                "items": {
                  "properties": {
                    "tasks": {
                      "items": {
                        "properties": {
                          "focus": { "type": "string", "minLength": 1 },
                          "work": { "type": "array", "minItems": 1 },
                          "success_criteria": { "type": "array", "minItems": 1 },
                          "validation_steps": { "type": "array", "minItems": 1 }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  ]
}

