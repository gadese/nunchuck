{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nunchuck Plan Archive Receipt",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "archived_at",
    "archive_id",
    "plan_title",
    "status_summary",
    "paths"
  ],
  "properties": {
    "version": { "type": "string", "const": "1" },
    "archived_at": { "type": "string", "format": "date-time" },
    "archive_id": { "type": "string", "minLength": 8 },
    "plan_title": { "type": "string", "minLength": 1 },
    "status_summary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["complete", "deferred", "total"],
      "properties": {
        "complete": { "type": "integer", "minimum": 0 },
        "deferred": { "type": "integer", "minimum": 0 },
        "total": { "type": "integer", "minimum": 0 }
      }
    },
    "paths": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo_root", "archive_dir"],
      "properties": {
        "repo_root": { "type": "string", "minLength": 1 },
        "archive_dir": { "type": "string", "minLength": 1 }
      }
    }
  }
}

