{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nunchuck Plan Task Frontmatter",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "kind",
    "plan",
    "subplan",
    "task",
    "status",
    "created_at",
    "updated_at",
    "title",
    "focus",
    "inputs",
    "work",
    "success_criteria",
    "outputs",
    "handoff"
  ],
  "properties": {
    "version": { "type": "string", "const": "1" },
    "kind": { "type": "string", "const": "plan_task" },
    "plan": { "type": "integer", "minimum": 1 },
    "subplan": { "type": "string", "pattern": "^[a-z]$" },
    "task": { "type": "string", "pattern": "^(i|ii|iii|iv|v|vi|vii|viii|ix|x)$" },
    "status": {
      "type": "string",
      "enum": ["pending", "in_progress", "complete", "deferred", "abandoned", "blocked"]
    },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" },
    "title": { "type": "string", "minLength": 1 },
    "focus": { "type": "string" },
    "inputs": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "pattern": "^(?!/)(?![A-Za-z]:\\\\\\\\)(?!\\.\\./)(?!\\./\\.\\./).+"
      }
    },
    "work": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "success_criteria": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "outputs": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "handoff": { "type": "string" },
    "assumptions": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "constraints": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "risk": {
      "type": "string",
      "enum": ["low", "medium", "high"]
    },
    "validation_steps": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "deferred_reason": {
      "type": "string",
      "minLength": 1
    }
  },
  "allOf": [
    {
      "if": {
        "properties": { "status": { "enum": ["in_progress", "complete"] } },
        "required": ["status"]
      },
      "then": {
        "properties": {
          "focus": { "type": "string", "minLength": 1 },
          "work": { "type": "array", "minItems": 1 },
          "success_criteria": { "type": "array", "minItems": 1 },
          "validation_steps": { "type": "array", "minItems": 1 }
        }
      }
    },
    {
      "if": {
        "properties": { "status": { "const": "complete" } },
        "required": ["status"]
      },
      "then": {
        "properties": {
          "outputs": { "type": "array", "minItems": 1 },
          "handoff": { "type": "string", "minLength": 1 }
        }
      }
    },
    {
      "if": {
        "properties": { "status": { "const": "deferred" } },
        "required": ["status"]
      },
      "then": {
        "required": ["deferred_reason"]
      }
    }
  ]
}

