{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "grape_intent_v1.schema.json",
  "title": "grape_intent_v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema", "prompt"],
  "properties": {
    "schema": {
      "type": "string",
      "const": "grape_intent_v1",
      "description": "Document discriminator for grape intent."
    },
    "prompt": {
      "type": "string",
      "minLength": 1,
      "description": "The user-provided intent, e.g. the remainder of a `/grape <prompt>` invocation."
    },
    "assumptions": {
      "type": "array",
      "description": "Optional: agent assumptions that influenced compilation (kept small and explicit).",
      "items": { "type": "string", "minLength": 1 },
      "maxItems": 8
    },
    "hints": {
      "type": "object",
      "description": "Optional: user-supplied or agent-chosen hints to constrain scope (not implied defaults).",
      "additionalProperties": false,
      "properties": {
        "roots": {
          "type": "array",
          "description": "Candidate repo roots to consider (compilation must still pick an explicit root).",
          "items": { "type": "string", "minLength": 1 },
          "maxItems": 8
        },
        "include_globs": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "maxItems": 32
        },
        "exclude_globs": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "maxItems": 64
        },
        "terms": {
          "type": "array",
          "description": "Candidate terms/synonyms (compilation must cap and pick a bounded term set).",
          "items": { "type": "string", "minLength": 1 },
          "maxItems": 32
        }
      }
    }
  }
}
