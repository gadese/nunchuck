{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Prompt Execution Receipt",
  "description": "Schema for execution receipts in ASI-compliant prompt skills",
  "type": "object",
  "required": [
    "version",
    "executed_at",
    "artifact_hash",
    "prompt_text",
    "execution_status"
  ],
  "properties": {
    "version": {
      "type": "string",
      "const": "1"
    },
    "executed_at": {
      "type": "string",
      "format": "date-time"
    },
    "artifact_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]+$"
    },
    "prompt_text": {
      "type": "string"
    },
    "execution_status": {
      "type": "string",
      "enum": ["success", "failed", "dry_run"]
    },
    "error_message": {
      "type": "string"
    },
    "execution_context": {
      "type": "object",
      "properties": {
        "user": {
          "type": "string"
        },
        "working_directory": {
          "type": "string"
        },
        "environment": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    }
  }
}
